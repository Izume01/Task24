<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings Page</title>
    <!-- Include Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">
    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <div class="w-64 bg-gray-800 text-white flex-shrink-0">
            <ul class="mt-10">
                <li class="mb-6">
                    <a href="/" class="flex items-center px-4 py-2 hover:bg-gray-700">
                        <i class="fa-solid fa-bars mr-3"></i>
                        <span>Menu</span>
                    </a>
                </li>
                <li class="mb-6">
                    <a href="/dashboard" class="flex items-center px-4 py-2 hover:bg-gray-700">
                        <i class="fa-solid fa-house mr-3"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li class="mb-6">
                    <a href="/stats" class="flex items-center px-4 py-2 hover:bg-gray-700">
                        <i class="fa-solid fa-chart-simple mr-3"></i>
                        <span>Statistics</span>
                    </a>
                </li>
                <li class="mb-6">
                    <a href="/settings" class="flex items-center px-4 py-2 hover:bg-gray-700">
                        <i class="fa-solid fa-cog mr-3"></i>
                        <span>Settings</span>
                    </a>
                </li>
                <li class="mb-6">
                    <a href="/logout" class="flex items-center px-4 py-2 hover:bg-gray-700">
                        <i class="fa-solid fa-right-from-bracket mr-3"></i>
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow p-8">
            <h2 class="text-3xl font-bold mb-8 text-gray-700">Update Your Profile</h2>
            <form action="/update"  class="space-y-6">
                <div>
                    <label for="username" class="block text-sm font-medium text-gray-600">Username (Optional):</label>
                    <input type="text" id="username" name="username" placeholder="New username" class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-600">Email (Optional):</label>
                    <input type="email" id="email" name="email" placeholder="New email" class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-600">Password (Optional):</label>
                    <input type="password" id="password" name="password" placeholder="New password" class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700">Update Settings</button>
            </form>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/41e0cd7cfa.js" crossorigin="anonymous"></script>
    <script>
        document.querySelector('form').addEventListener('submit' , async(e) => {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const response = await fetch('/update', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({username, email, password })
            });
            const data = await response.json();
            if(data.success) {
                alert('Settings updated successfully');
            } else {
                alert('An error occurred');
            }
        })
    </script>
</body>
</html>
